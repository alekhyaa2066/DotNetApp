@page "{projectId:int?}"
@*for string datatype is not required "{projectId}"*@
@model WebApp.Pages.Project.EditProjectModel
@{
    ViewData["Title"] = "EditProject";
}

<form method="post">
    <input type="hidden" asp-for="Proj.PId" />

    <div class="form-group">
        <label asp-for="Proj.PName"></label>
        <input asp-for="Proj.PName" class="form-control" />
        <span class="text-danger" asp-validation-for="Proj.PName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Proj.PManager"></label>
        <input asp-for="Proj.PManager" class="form-control" />
        <span class="text-danger" asp-validation-for="Proj.PManager"></span>
    </div>

    <div class="form-group">
        <label asp-for="Proj.Skill1"></label>
        <input asp-for="Proj.Skill1" class="form-control" />
        <span class="text-danger" asp-validation-for="Proj.Skill1"></span>
    </div>

    <div class="form-group">
        <label asp-for="Proj.Skill2"></label>
        <input asp-for="Proj.Skill2" class="form-control" />
        <span class="text-danger" asp-validation-for="Proj.Skill2"></span>
    </div>

    <div class="form-group">
        <label asp-for="Proj.Skill3"></label>
        <input asp-for="Proj.Skill3" class="form-control" />
        <span class="text-danger" asp-validation-for="Proj.Skill3"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}