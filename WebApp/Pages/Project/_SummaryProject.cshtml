@using LTI.Core
@model Project

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.PName</h3>
    </div>

    <div class="panel-body">
        <span><b>Project Id :</b> @Model.PId</span>
        <span>Project Name: @Model.PName</span>
        <span>Project Manager : @Model.PManager</span>
    </div>

    <div class="panel-footer">
        <a class="btn btn-lg"
           asp-page="./ProjectDetails"
           asp-route-projectId="@Model.PId">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a> &nbsp;

        <a class="btn btn-lg" asp-page="./EditProject" asp-route-projectId="@Model.PId">
            <i class="glyphicon glyphicon-edit"></i>
        </a> &nbsp;

        <a class="btn btn-lg" asp-page="./DeleteProject" asp-route-projectId="@Model.PId">
            <i class="glyphicon glyphicon-trash"></i>
        </a>

    </div>
</div>
